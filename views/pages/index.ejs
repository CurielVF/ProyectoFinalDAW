<%- include('../template/head') -%>

    <p>Inicio</p>
    <table>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Creador</th>
        </tr>
        <% for(var i=0; i < juegos.length; i++) { %>
            <tr>
                <td>
                    <img src=<%=juegos[i].imagen %> height="100">
                </td>
                <td>
                    <%= juegos[i].nombre %>
                </td>

                <td>
                    <%= juegos[i].descripcion %>
                </td>
                <td>
                    <a href="/creador/<%= juegos[i].creador %>">
                        <%= juegos[i].creador %>
                    </a>
                </td>
            </tr>
            <% } %>
    </table>

    <%- include('../template/footer')-%>