<%- include('../template/head') -%>
    <main>
        <h1 name="titulo-juego" id="<%= _id %>">
            <%= nombre %>
        </h1>

        <img id="img-juego" src='<%=imagen %>' class="imagen-creador"
            onerror="this.src='https://thumbs.dreamstime.com/b/seamless-bright-vector-pattern-joysticks-video-game-controller-gaming-cool-print-boys-girls-textiles-sportswear-212032349.jpg';">
        <div class="datos-juego">
            <p>
                <span>Creador: </span>
                <a href="/creador/<%= creadorId %>">
                    <%= creador %>
                </a>
            </p>
            <p>
                <span>Calificación: </span>
                <%= calificacion.toFixed(2) %> <span class="estrella-calificacion">★</span>
            </p>
            <p>
                <span>Descripción: </span>
                <%= descripcion!="" ? descripcion : "-" %>
            </p>
            <p>
                <span>Clasificación: </span>
                <%= clasificacion!="" ? clasificacion : "-" %>
            </p>
            <p>
                <span>Categoría: </span>
                <%= categoria!="" ? categoria : "-" %>
            </p>
            <p>
                <span>Link de descarga: </span>
                <a href="<%= descarga!=null ? descarga : "" %>">
                    <%= descarga!="" ? descarga : "-" %>
                </a>
            </p>
            <p>
                <span>Fecha de creación: </span>
                <%= fecha.getDate() + "/" + (fecha.getMonth()+1 )+ "/" +fecha.getFullYear(); %>
            </p>
            <p>
            <h3>Comentarios</h3>
            <div class="-seccion-comentarios">
                <div class="agregar-comentario">
                    <form id="drop-cal" role="form" >
                        <div class="calificacion">
                            <label>Calificación: </label>
                            <select id="calificacion-comentario">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            <span class="estrella-calificacion">★</span>
                        </div>


                        <textarea id="inputComentarios" type="text" class="form-control"
                            placeholder="Comenta lo que piensas..." rows="5" vol></textarea>

                        <a href="/">
                            <button id="agregar-comentario" type="submit"
                                class="btn btn-primary btn-sm">Publicar</button>
                        </a>
                    </form>
                </div>

                <% if(comentarios.length !=0){ %>
                    <table class="comentarios-juego">
                        <% for(var i=0; i < comentarios.length; i++) { %>
                            <tr>
                                <td class="fila-comentario">
                                    <div id="comentario-ind">
                                        <p>
                                            <span>
                                                Usuario:
                                                <a href="/creador/<%= comentarios[i].creadorId %>">
                                                    <%= comentarios[i].nombreCreador %>
                                                </a>
                                            </span>
                                        </p>
                                        <p>
                                            <span>Calificación:</span>
                                            <%= comentarios[i].calificacion %><span
                                                    class="estrella-calificacion">★</span>
                                        </p>
                                        <p>
                                            <%= comentarios[i].comentario %>
                                        </p>
                                </td>
                            </tr>
                            <% } %>
                    </table>
                    <% }else{%>
                        <h2>No hay comentarios</h2>
                        <% }%>
                            </p>

            </div>



    </main>
    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="./js/clickable.js"></script>

    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="./js/juego.js"></script>

    <%- include('../template/footer')-%>